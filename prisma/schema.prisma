generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-3.0.x"]
}

datasource db {
  provider  = "mysql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Conversation {
  id            String    @id @default(cuid())
  title         String
  agentId       String
  agentName     String
  agentSnapshot String    @db.LongText
  needsReferral Boolean   @default(false)
  isConverted   Boolean   @default(false)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  clientEmail   String?
  aiActive      Boolean   @default(true)
  lead          Lead?
  messages      Message[]
}

model Message {
  id             String       @id @default(cuid())
  conversationId String
  role           MessageRole
  content        String       @db.LongText
  timestamp      DateTime     @default(now())
  conversation   Conversation @relation(fields: [conversationId], references: [id])

  @@index([conversationId], map: "Message_conversationId_fkey")
}

model Lead {
  id                    String             @id @default(cuid())
  conversationId        String             @unique
  name                  String?
  email                 String?
  phone                 String?
  age                   Int?
  mainConcern           String?            @db.LongText
  emotionalState        EmotionalState?
  urgencyLevel          Int?
  symptoms              String?            @db.LongText
  duration              String?
  previousTherapy       Boolean?
  preferredContact      ContactPreference?
  availability          String?
  budget                String?
  insuranceProvider     String?
  status                LeadStatus         @default(new)
  score                 Int                @default(0)
  suggestedProfessional String?
  notes                 String?            @db.LongText
  createdAt             DateTime           @default(now())
  updatedAt             DateTime           @updatedAt
  lastActivity          DateTime           @default(now())
  budgetMax             Int?
  budgetMin             Int?
  city                  String?
  modality              String?
  neighborhood          String?
  state                 String?
  cep                   String?
  scheduledDate         DateTime?
  schedulingNotes       String?            @db.LongText
  conversation          Conversation       @relation(fields: [conversationId], references: [id])
}

model Agent {
  id                 String   @id @default(cuid())
  name               String
  crp                String
  specialties        String?  @db.LongText
  approach           String?
  experience         String?
  bio                String?  @db.LongText
  email              String
  phone              String?
  availability       String?  @db.LongText
  priceRange         String?
  acceptsInsurance   Boolean  @default(false)
  insuranceProviders String?  @db.LongText
  photo              String?
  active             Boolean  @default(true)
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt
  city               String?
  modalities         String?  @db.LongText
  neighborhood       String?
  priceMax           Int?
  priceMin           Int?
  state              String?
}

model AIAgentConfig {
  id                    String   @id
  name                  String
  personality           String
  description           String   @db.LongText
  model                 String
  systemPrompt          String   @db.LongText
  greeting              String   @db.LongText
  conversationStyle     String
  maxMessageLength      Int
  responseDelay         Int
  collectDataFields     String   @db.LongText
  autoReferralThreshold Int
  temperature           Float
  active                Boolean
  color                 String
  icon                  String
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt
}

enum MessageRole {
  user
  assistant
}

enum LeadStatus {
  new
  contacted
  scheduled
  converted
  lost
}

enum EmotionalState {
  low
  moderate
  high
  critical
}

enum ContactPreference {
  email
  phone
  whatsapp
}
